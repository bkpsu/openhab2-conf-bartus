			else if (sceneState instanceof DecimalType)
				{
					i.sendCommand(sceneState.state as DecimalType)
				}
			else
				{*/
					i.sendCommand(sceneState.state.toString)
			//	}
		}
    ]

    triggeringItem.sendCommand(OFF)
